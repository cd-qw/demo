<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="XbclMes.MainPage" Shell.NavBarIsVisible="False" xmlns:e="clr-namespace:XbclMes.Models" x:Name="mainPage">

    <AbsoluteLayout>
        <WebView AbsoluteLayout.LayoutFlags="All"  AbsoluteLayout.LayoutBounds="0,0,1,1" x:Name="webView" android:WebView.MixedContentMode="AlwaysAllow">

        </WebView>
        <ImageButton AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0.2" Source="refresh.png" AbsoluteLayout.LayoutBounds="1,0.8" Clicked="reload"  BackgroundColor="LightGray" HeightRequest="30" WidthRequest="30"  CornerRadius="28" Margin="10"> 
            
        </ImageButton>
        <ImageButton AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0.2" Source="setting.png" AbsoluteLayout.LayoutBounds="0,0.8" BackgroundColor="LightGray" HeightRequest="30" WidthRequest="30" CornerRadius="28" Margin="10"  Clicked="set">

        </ImageButton>
    </AbsoluteLayout>
    
</ContentPage>
